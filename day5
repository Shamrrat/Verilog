
//1. net_data_types
module net_data;
wire a;
tri1 b;
wor  c;
wand d;
assign a=0;
assign a=1;
assign b=0;
assign c=0;
assign c=1;
assign d=0;
assign d=1;
initial
begin
 $display(" a=%b b=%b c=%b d=%b",a,b,c,d);
 end
endmodule


//2. variable data types
module variables;
reg a,b,c;
reg signed [2:0]x,y,z;
integer f,d,e;
initial
begin
b=1;
c=1;
a=b+c;
x=-4;
y=-3;
z=x+y;
d=8;
e=6;
f=d+e;
$display("a=%b  b=%b c=%b  d=%d  e=%d  f=%d  x=%d y=%d z=%d",a,b,c,d,e,f,x,y,z);
end
endmodule
